# Environment variables for Quantitative Risk Platform
# Copy this file to .env and fill in your specific values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/risk_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# External Data Providers
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_ENABLED=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/risk_platform.log

# Monte Carlo Simulation Defaults
DEFAULT_SIMULATIONS=10000
DEFAULT_TIME_HORIZON=252
DEFAULT_CONFIDENCE_LEVELS=0.95,0.99,0.999

# Frontend Configuration
STREAMLIT_PORT=8501
BACKEND_API_URL=http://localhost:8000

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Performance
MAX_CONCURRENT_SIMULATIONS=4
CACHE_TTL_SECONDS=3600