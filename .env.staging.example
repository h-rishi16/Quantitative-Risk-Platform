# Staging Environment Configuration
# Copy this file to .env.staging for local staging deployment

# Environment Settings
ENVIRONMENT=staging
API_VERSION=staging-1.0.0
DEBUG=true
LOG_LEVEL=DEBUG

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_BASE_URL=http://localhost:8003
CORS_ORIGINS=["http://localhost:8502", "http://localhost:3000"]

# Database Configuration (PostgreSQL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=risk_platform_staging
POSTGRES_USER=risk_user_staging
POSTGRES_PASSWORD=staging_db_password_2024

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password_2024
REDIS_DB=0

# Security Settings
SECRET_KEY=staging_secret_key_2024_not_for_production
JWT_SECRET_KEY=staging_jwt_secret_2024_not_for_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Application Settings
MAX_PORTFOLIO_SIZE=1000
MAX_SIMULATIONS=100000
DEFAULT_CONFIDENCE_LEVELS=[0.95, 0.99]
CACHE_TTL_SECONDS=300

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_FORMAT=json
LOG_FILE=logs/staging.log

# Feature Flags
ENABLE_PORTFOLIO_OPTIMIZATION=true
ENABLE_STRESS_TESTING=true
ENABLE_BACKTESTING=true
ENABLE_REAL_TIME_PRICING=false

# External Services (Mock/Staging endpoints)
MARKET_DATA_API_URL=https://api.staging.marketdata.com
PRICING_API_URL=https://api.staging.pricing.com
NOTIFICATION_SERVICE_URL=https://api.staging.notifications.com

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=["csv", "xlsx", "json"]
UPLOAD_PATH=/app/uploads

# Performance Settings
WORKER_PROCESSES=2
WORKER_THREADS=4
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT_SECONDS=30

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_ADMIN_PANEL=true
AUTO_RELOAD=true